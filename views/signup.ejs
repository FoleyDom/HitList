<%- include('./layout/header.ejs') %> 

    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <form class="vertical" action="/signup" method="POST">

      <label for="userName">Username</label>
      <input type="text" name="userName" placeholder="Bob Bobberson">

      <label for="email">Email</label>
      <input type="email" name="email" placeholder="Bob@bobby.web">

      <label for="password">Password</label>
      <input type="password" name="password" placeholder="Not 'password1'">

      <label for="confirmPassword">Confirm Password</label>
      <input type="password" name="confirmPassword" placeholder="Now type it again">

      <button class="btn" type="submit">Submit</button>
    </form>

<%- include('./layout/footer.ejs') %> 
